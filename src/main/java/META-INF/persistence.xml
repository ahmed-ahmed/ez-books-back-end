<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>io.ezbooks.api.model.Account</class>
        <class>io.ezbooks.api.model.AccountCategories</class>
        <class>io.ezbooks.api.model.AccountType</class>
        <class>io.ezbooks.api.model.Journal</class>
        <class>io.ezbooks.api.model.JournalDetail</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ezbook"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
